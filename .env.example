# ==================================================
# AlfTekPro HRMS - Environment Configuration
# ==================================================
# Copy this file to .env and update values for your environment
# IMPORTANT: Never commit .env file to version control

# --------------------------------------------------
# PostgreSQL Configuration
# --------------------------------------------------
POSTGRES_DB=alftekpro_hrms
POSTGRES_USER=hrms_user
POSTGRES_PASSWORD=hrms_dev_pass_2024
POSTGRES_PORT=5432

# --------------------------------------------------
# Redis Configuration
# --------------------------------------------------
REDIS_PASSWORD=redis_dev_pass_2024
REDIS_PORT=6379

# --------------------------------------------------
# API Configuration
# --------------------------------------------------
API_PORT=5001

# --------------------------------------------------
# JWT Configuration
# --------------------------------------------------
# IMPORTANT: Generate a strong secret key for production (min 32 characters)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production

# --------------------------------------------------
# Azure Storage Configuration
# --------------------------------------------------
# For local development, use Azurite emulator
AZURE_STORAGE_CONNECTION=UseDevelopmentStorage=true

# For Azure production, use connection string from Azure Portal:
# AZURE_STORAGE_CONNECTION=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=youraccountkey;EndpointSuffix=core.windows.net

# --------------------------------------------------
# pgAdmin Configuration (Optional)
# --------------------------------------------------
PGADMIN_EMAIL=admin@alftekpro.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# --------------------------------------------------
# Application Settings
# --------------------------------------------------
ASPNETCORE_ENVIRONMENT=Development

# --------------------------------------------------
# Logging Configuration
# --------------------------------------------------
# Options: Trace, Debug, Information, Warning, Error, Critical
LOG_LEVEL=Information
